<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{48} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- CI needs this to diagnose why DockerClientProviderStrategy rejects all strategies. -->
  <logger name="org.testcontainers.dockerclient" level="DEBUG"/>
  <logger name="com.github.dockerjava" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>

